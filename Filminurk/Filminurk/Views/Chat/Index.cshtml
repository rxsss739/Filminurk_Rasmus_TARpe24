@using Microsoft.AspNetCore.Identity
@inject UserManager<Filminurk.Core.Domain.ApplicationUser> userManager
<!DOCTYPE html>
<html>
<head>
    <title>SignalR Simple Chat</title>
    <style>
        .container {
            background-color: #99CCFF;
            border: thick solid #808080;
            padding: 20px;
            margin: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <input type="text" id="message" />
        <input type="button" id="sendmessage" value="Send" />
        <input type="hidden" id="displayname" value="@User.Identity?.Name" />
        <ul id="discussion"></ul>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chatHub")
            .build();

        connection.on("ReceiveMessage", (name, message) => {
            const encodedName = $('<div />').text(name).html();
            const encodedMsg = $('<div />').text(message).html();
            $('#discussion').append(
                `<li><strong>${encodedName}</strong>: ${encodedMsg}</li>`
            );
        });

        connection.start().then(() => {
            $('#sendmessage').click(() => {
                connection.invoke(
                    "SendMessage",
                    $('#displayname').val(),
                    $('#message').val()
                );
                $('#message').val('').focus();
            });
        }).catch(err => console.error(err));
    </script>
</body>
</html>
