@model IEnumerable<Filminurk.Models.Actors.ActorsIndexViewModel>

@{
	int rowNumber = 1;
}

<div>
	<a asp-action="Create" asp-controller="Actors" type="submit" class="btn btn-primary">Add Actor</a>
</div>
<hr />
<div class="h1">
	Actors
</div>
<form method="get">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Näitleja ID</th>
				<th scope="col">Eesnimi</th>
				<th scope="col">Perekonnanimi</th>
				<th scope="col">Hüüdnimi</th>
				<th scope="col">Tuntud film</th>
				<th scope="col">Mängitud filmid</th>
				<th scope="col">Sugu</th>
				<th scope="col">Filmi hinnang</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var actor in Model)
			{
				<tr>
					<td>@rowNumber</td>
					<td>@actor.ActorID</td>
					<td>@actor.FirstName</td>
					<td>@actor.LastName</td>
					<td>@actor.NickName</td>
					<td>@actor.MovieKnownFor</td>
					<td>@actor.MoviesActedFor</td>
					<td>@actor.Gender</td>
					<td>@actor.ActorRating</td>
					<td>
						<a asp-action="Delete" asp-controller="Actors" asp-route-id="@actor.ActorID" class="btn btn-danger">Delete</a>
						<a asp-action="Update" asp-controller="Actors" asp-route-id="@actor.ActorID" class="btn btn-primary">Update</a>
						<a asp-action="Details" asp-controller="Actors" asp-route-id="@actor.ActorID" class="btn btn-primary">Details</a>
					</td>
				</tr>
				rowNumber += 1;
			}
		</tbody>
	</table>
</form>