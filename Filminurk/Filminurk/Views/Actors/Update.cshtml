@model Filminurk.Models.Actors.ActorsUpdateViewModel

<div>
	<form method="post" enctype="multipart/form-data">
		<input asp-for="@Model.ActorID" type="hidden" />

		<div class="form-group row">
			<label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="FirstName" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="LastName" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="LastName" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="NickName" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="NickName" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="PortraitID" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="PortraitID" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="ActorRating" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="ActorRating" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Gender" class="col-sm-2 col-form-label"></label>
			<select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Genders>()">
				<option value=""> -- Vali sugu -- </option>
			</select>
		</div>

		<div class="form-group row">
			<label asp-for="MovieKnownFor" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="MovieKnownFor" class="form-control" />
			</div>
		</div>

		<input asp-action="Update" asp-controller="Actors" type="submit" class="btn btn-primary" value="Update" />
		<a asp-action="Index" asp-controller="Movies" class="btn btn-success">Back</a>

	</form>
</div>